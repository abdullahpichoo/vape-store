{
  "extends": ["next/core-web-vitals", "plugin:import/errors", "next"],
  "settings": {
    "import/resolver": {
      "alias": {
        "extensions": [".ts", ".tsx"],
        "map": [["@", "."]]
      }
    }
  },
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "pathGroups": [
          {
            "pattern": "@/**",
            "group": "internal"
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  }
}
